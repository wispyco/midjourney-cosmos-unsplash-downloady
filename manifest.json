{
    "manifest_version": 3,
    "name": "Image Downloader Extension",
    "version": "1.0",
    "description": "Download images from Midjourney, Unsplash, or Cosmos sites.",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Image Downloader"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "jszip.min.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}